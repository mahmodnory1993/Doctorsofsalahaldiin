<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".About_app">

    <ImageView
            android:layout_width="250dp"
            android:elevation="2dp"
            android:background="@drawable/shadow"
            android:layout_height="250dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView4"
            android:layout_gravity="center_horizontal" android:layout_marginTop="20dp"/>
    <TextView
            android:text="دليل اطباء صلاح الدين"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_gravity="center"
            android:textSize="18sp"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginTop="400dp" android:padding="30dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textaboutapp" android:layout_gravity="center" android:textAlignment="center"
                    android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>