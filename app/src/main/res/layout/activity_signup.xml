<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:fab="http://schemas.android.com/apk/res-auto"

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Signup"
         android:orientation="vertical">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:padding="60dp" android:layout_gravity="center"
                android:gravity="center">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/email_doctor" android:hint="ادخل الايميل" android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_email_black_24dp" android:textColor="#6A4BC3"
                    android:textColorHighlight="#6A4BC3" android:textColorHint="#8A6A4BC3"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/password_doctor" android:hint="كلمة المرور" android:textAlignment="viewEnd"
                    android:drawableLeft="@drawable/ic_lock_black_24dp" android:textColor="#6A4BC3"
                    android:textColorHighlight="#6A4BC3" android:textColorHint="#906A4BC3"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/repasword" android:hint="اعد كلمة المرور" android:textAlignment="viewEnd"
                    android:drawableLeft="@drawable/ic_lock_black_24dp" android:textColor="#6A4BC3"
                    android:textColorHighlight="#6A4BC3" android:textColorHint="#7C6A4BC3"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:clickable="true"
                    android:id="@+id/save_data_doctor"
                    android:drawingCacheQuality="high"
                    fab:srcCompat="@drawable/ic_arrow_forward_black_24dp"
                    fab:fabSize="normal"
                    fab:fab_shadowColor="#00000000"
                    fab:fab_showShadow="false"
                    android:layout_gravity="center_horizontal"
                    fab:backgroundTint="#6A4BC3"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>