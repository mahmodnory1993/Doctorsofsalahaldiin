<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:fab="http://schemas.android.com/apk/res-auto"

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Data_of_User_and_Docotr"
        android:orientation="vertical" android:padding="20dp" android:gravity="center">


    <LinearLayout
            android:id="@+id/textdata"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:visibility="visible">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/nameedit"
                android:hint="الاسم"
                android:visibility="visible" android:textColor="#6A4BC2" android:textColorHighlight="#6A4BC2"
                android:textColorHint="#A46A4BC2"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"


                android:id="@+id/department_doctoredit" android:hint="الاختصاص" android:visibility="visible"
                android:textColor="#6A4BC2" android:textColorHighlight="#6A4BC2" android:textColorHint="#A46A4BC2"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"


                android:id="@+id/addres_doctoredit" android:hint="العنوان" android:visibility="visible"
                android:textColorHint="#A46A4BC2" android:textColor="#6A4BC2" android:textColorHighlight="#6A4BC2"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"


                android:id="@+id/phonenum_doctoredit" android:hint="رقم الحجز" android:visibility="visible"
                android:textColor="#6A4BC2" android:textColorHint="#A46A4BC2" android:textColorHighlight="#6A4BC2"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"


                android:id="@+id/signup_doctoredit" android:hint="رقم الاجازة" android:visibility="visible"
                android:textColor="#F76A4BC2" android:textColorHighlight="#6A4BC2" android:textColorHint="#A46A4BC2"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"

                android:id="@+id/cityedit" android:layout_weight="1" android:hint="المدينة" android:textColor="#6A4BC2"
                android:textColorHint="#A46A4BC2" android:textColorHighlight="#6A4BC2"/>
    </LinearLayout>
</LinearLayout>