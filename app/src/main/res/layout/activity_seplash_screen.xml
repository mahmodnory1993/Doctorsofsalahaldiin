<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SeplashScreen"
        android:orientation="vertical">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginBottom="45dp"
            android:layout_gravity="bottom|center">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_gravity="bottom|center">
                <TextView
                        android:text="-"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/pro1"
                        android:layout_gravity="bottom|center"
                        android:textSize="36sp"
                        android:textColor="#000000" android:textStyle="bold" android:layout_weight="1"/>
                <TextView
                        android:text="-"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/pro2"
                        android:layout_gravity="bottom|center"
                        android:textSize="36sp"
                        android:textStyle="bold" android:layout_weight="1"/>
                <TextView
                        android:text="-"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/pro3"
                        android:layout_gravity="bottom|center"
                        android:textSize="36sp" android:textStyle="bold"
                        android:layout_weight="1"/>
                <TextView
                        android:text="-"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/pro4"
                        android:layout_gravity="bottom|center"
                        android:textSize="36sp"
                        android:textStyle="bold" android:layout_weight="1"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">

            <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/viewpager">
            </androidx.viewpager.widget.ViewPager>
        </FrameLayout>
        <FrameLayout
                android:layout_width="match_parent"
                android:background="#6A4BC3"
                android:layout_height="wrap_content" android:layout_gravity="bottom">

            <Button
                    android:text="التالي"
                    android:background="#6A4BC3"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/next" android:layout_gravity="bottom|right"
                    android:textSize="18sp"/>
            <Button
                    android:text="تخطي"
                    android:background="#6A4BC3"
                    android:textColor="#fff"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/skip"
                    android:layout_gravity="bottom|left" android:textSize="18sp"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>