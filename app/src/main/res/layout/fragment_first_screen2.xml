<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Fragments.FirstScreen">

    <ImageView android:layout_width="300dp" android:layout_height="300dp"


               app:srcCompat="@drawable/doctor" android:layout_gravity="center_horizontal"
               android:padding="20dp" android:id="@+id/f_image"/>
    <TextView
            android:text="اهلا وسهلا بكم في تطبيق"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/f_title1" android:layout_gravity="center"
            android:textColor="#6452A2" android:textSize="18sp" android:textStyle="bold"/>
    <TextView
            android:text="دليل اطباء صلاح الدين"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/f_title2" android:textSize="24sp"
            android:textColor="#6452A1" android:layout_gravity="center" android:layout_marginTop="50dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/f_title3" android:layout_gravity="center"
            android:layout_marginTop="100dp"/>

</FrameLayout>