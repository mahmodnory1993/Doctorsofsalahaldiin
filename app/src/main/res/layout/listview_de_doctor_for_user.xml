<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="135dp" android:padding="10dp">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:background="@drawable/background_listview" android:padding="5dp"
                    android:layout_marginRight="70dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom">
                    <Button
                            android:text="التفاصيل"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp" android:id="@+id/doctor_info_listview"
                            android:layout_weight="1"
                            android:background="@drawable/backgroundbutton" android:textColor="#FFFFFF"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_weight="1" android:paddingRight="5dp"
                        android:layout_gravity="center">
                    <TextView
                            android:text="اسم الطبيب"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/doctor_name_listview"
                            android:textSize="14sp"
                            android:textColor="#B647CA" android:layout_marginRight="30dp"/>
                    <TextView
                            android:text="العنوان"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/doctor_addres_listview"
                            android:textSize="14sp"
                            android:textColor="#B164BE" android:layout_marginRight="35dp"/>
                    <TextView
                            android:text="رقم الهاتف"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/doctor_phone_listview"
                            android:textSize="14sp"
                            android:textColor="#FFB164BE" android:layout_marginRight="30dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_gravity="right">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/personal_image_show"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/cercal"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"
                        android:layout_weight="1"/>

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>


</LinearLayout>